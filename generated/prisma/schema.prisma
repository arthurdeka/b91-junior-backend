generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id         String      @id @default(uuid()) @db.Uuid
  nome       String      @db.VarChar(255)
  email      String      @unique @db.VarChar(255)
  senha      String      @db.VarChar(72)
  transacoes Transacao[]

  @@map("usuario")
}

model Transacao {
  id            String   @id @default(uuid()) @db.Uuid
  data          DateTime @db.Time
  valor_bruto   Decimal  @db.Decimal(9, 2)
  valor_liquido Decimal  @db.Decimal(9, 2)
  tipo          String   @db.VarChar(50)
  taxa          Decimal  @db.Decimal(4, 2)
  parcelas      Int?
  cliente_id    String   @db.Uuid
  cliente       Usuario  @relation(fields: [cliente_id], references: [id], map: "cliente_fk")

  @@map("transacao")
}
